{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "command": "npm run build"
    },
    "w:deploy": {
      "command": "npm run build && wrangler pages deploy ./build/client --project-name=your-project",
      "dependsOn": ["build"]
    },
    "w:deploy:prod": {
      "command": "npm run build && wrangler pages deploy ./build/client --project-name=your-project --branch=production",
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
